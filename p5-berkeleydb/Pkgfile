# Description: BerkeleyDB PERL module
# URL: http://search.cpan.org/dist/BerkeleyDB/
# Maintainer: Lucas Hazel, lucas at die dot net dot au
# Depends on: perl, db

name=p5-berkeleydb
distname=BerkeleyDB
version=0.36
release=1
source=(http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/$distname-$version.tar.gz)

build() {
	cd $distname-$version
	perl Makefile.PL
        make OPTIMIZE="$CFLAGS"
        make DESTDIR=$PKG install
        find $PKG -name .packlist \
	    -o -name perllocal.pod \
	    -o -name '*.bs' \
	    | xargs rm -rf
}
